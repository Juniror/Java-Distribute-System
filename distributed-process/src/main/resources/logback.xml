<?xml version="1.0" encoding="UTF-8"?>
<!--ตั้งค่า logging format และ level-->
<configuration>

    <!-- Console Appender สำหรับแสดงผลใน Terminal -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [Process-%X{processId:-UNKNOWN}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender สำหรับเก็บ log ไฟล์ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/distributed-process.log</file>

        <!-- Rolling Policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/distributed-process.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [Process-%X{processId:-UNKNOWN}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Redis Communication Logger -->
    <logger name="com.distributed.process.communication" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Election Logger -->
    <logger name="com.distributed.process.threads.ElectionThread" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Heartbeat Logger -->
    <logger name="com.distributed.process.threads.HeartbeatThread" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>